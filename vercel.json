{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["views/**", "lib/**"] }
    },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/style.css", "dest": "/public/style.css" },
    { "src": "/(.*)", "dest": "/api/index.js" }
  ]
}
